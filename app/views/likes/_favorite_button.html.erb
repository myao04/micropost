<% unless current_user == user %>

  
<% if current_user.favoritings?(user) %>

    
<%= form_for(current_user.likes.find_by(favorite_id: user.id), html: { method: :delete }) do |f| %>

      
<%= hidden_field_tag :micropost_id, user.id %>

      
<%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>

    
<% end %>

  
<% else %>

    
<%= form_for(current_user.likes.build) do |f| %>

      
<%= hidden_field_tag :micropost_id, user.id %>

      
<%= f.submit 'favorite', class: 'btn btn-primary btn-block' %>

    
<% end %>

  
<% end %>

<% end %>

